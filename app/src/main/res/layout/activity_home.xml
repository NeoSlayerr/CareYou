<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:text="Welcome User"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/schedule"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/profil"
        android:background="@drawable/schedule" />

    <TextView
        android:id="@+id/profil"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/profil" />

    <androidx.cardview.widget.CardView
        android:id="@+id/poster"
        android:layout_width="370dp"
        android:layout_height="500dp"
        android:layout_below="@+id/schedule"
        android:layout_marginTop="16dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#3E64FF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/covid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Covid-19\nHealthcare"
                android:textSize="36sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/appoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Book your next online\nappointments"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_below="@+id/covid"/>

            <ImageView
                android:layout_width="320dp"
                android:layout_height="300dp"
                android:layout_below="@+id/appoint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65dp"
                android:src="@drawable/poster" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/problem"
        android:layout_width="370dp"
        android:layout_height="115dp"
        android:layout_below="@+id/poster"
        app:cardUseCompatPadding="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#F9F9FB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/prob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Unknown Problems?"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/prob"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:text="Find suitable specialist here"
                    android:textColor="#6B779A"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginHorizontal="13dp"
                        android:layout_marginVertical="13dp"
                        android:src="@drawable/right" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/spe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/problem"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Specialty"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_below="@+id/spe"
        android:layout_width="wrap_content"
        android:layout_height="170dp">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/neurology"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#F9F9FB">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_marginTop="20dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/neurology"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Neurology"
                            android:layout_below="@id/img"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="2.029 Doctors"
                            android:textColor="#6B779A"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/genetics"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#F9F9FB">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/genetics" />

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="16dp"
                            android:text="Genetics"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="1.870 Doctors"
                            android:textColor="#6B779A"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/dentistry"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#F9F9FB">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/dentistry" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dentistry"
                            android:layout_below="@id/img2"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="1.064 Doctors"
                            android:textColor="#6B779A"
                            android:textSize="10sp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/surgery"
                    android:layout_width="150dp"
                    android:layout_height="170dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#F9F9FB">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/surgery" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Surgery"
                            android:layout_below="@id/img3"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="16dp"
                            android:layout_centerHorizontal="true"/>
                        <TextView
                            android:layout_below="@id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="964 Doctors"
                            android:textSize="10sp"
                            android:layout_marginTop="8dp"
                            android:textColor="#6B779A"
                            android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>


    </RelativeLayout>
</RelativeLayout>

</ScrollView>